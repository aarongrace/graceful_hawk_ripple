	TITLE	"Ripples by Aaron Grace"

	USE	"hawk.h"	
	USE	"stdio.h"
	USE	"stdlib.h"
	USE	"common.h"

	EXT	INITIALIZE_OBJ_LIST
	EXT	INIT_CANVAS
	EXT	DISPLAY_CANVAS
	EXT	ADD_RIPPLE
	EXT	DRAW_OBJECTS
	EXT	LOWER_CANVAS_VALUES
; canvas object
	EXT	DEBUG
	S	DEBUG
;	S	MAIN_STOP
	INT	MAIN

PROGRAM_CYCLE:
; entry point frMEMD_RETURNom MEMD
	LOADCOM	R2,INIT_R2
	TOSUBR	LOWER_CANVAS_VALUES
ENTRY_FROM_MAIN:
	TOSUBR	ADD_RIPPLE
	TOSUBR	DRAW_OBJECTS
	TOSUBR	DISPLAY_CANVAS


ARSIZE	=	4
MAIN:
;	STORES	R1,R2
;	ADDSI	R2,ARSIZE	; -- receiving sequence

	LIL	R3,INIT_R2
	STORES	R2,R3

	TOSUBR	INIT_CANVAS
	TOSUBR	INITIALIZE_OBJ_LIST

	LEA	R4,PROGRAM_CYCLE
	LIL	R3,PROGRAM_CYCLE_AD
	STORES	R4,R3

	TOSUBR	ENTRY_FROM_MAIN
	END
