	USE	"hawk.h"	
	USE	"stdio.h"
	USE	"stdlib.h"
	USE	"common.h"



	INT	GENERATE_CIRCLE
OBJ=4
ARSIZE=8
GENERATE_CIRCLE:
	;takes R3=rad, R4=center_x,R5=center_y
	;uses RA=rad, RB=center_x,RC=center_y
	;	RD=x,RE=y, RF=pointer to current entry in circle obj
	;returns R3, pointer to circle object, which contains all coords
	;	the first field of circle is its size
	;	the circle array has x in lower 4 bits and y in higher 4 bits
	C_S
	
	MOVE	RA,R3
	MOVE	RB,R4
	MOVE	RC,R5

	; generate circle obj with size rad * 5 words
	ADDSL	R3,R3,2
	SL	R3,2
	TOSUBR	MALLOC
	STORE	R3,R2,OBJ-ARSIZE
	MOVE	RF,R3

	; important: first field of the circle object should contain the size
	ADDSI	RF,CIRCLE_ARRAY_START

	LIS	RD,0	; x = 0
	MOVE	RE,RA	; y = rad

	MOVE	R3,RA
	MOVE	R4,RA
	TOSUBR	TIMESU
	MOVE	R8,R3	; save rad^2 in R8

GC_WHILE:
	; obj[curr] = y << 4 + x
	MOVE	R6,RD
	MOVE	R7,RE
	
UPPER_RIGHT:
	ADD	R6,RB,R6	; x = center_x + x
	ADD	R7,RC,R7	; y = center_y + y
	TOSUBR	GC_STORE_SUBR

	TESTR	RD		; if x == 0, store only +y -y
	BEQ	LOWER_LEFT
UPPER_LEFT:
	SUB	R6,RB,R6	; x = center_x - x
	ADD	R7,RC,R7	; y = center_y + y
	TOSUBR	GC_STORE_SUBR
	
	TESTR	RE		; if y == 0, store only +x -x
	BEQ	GC_STORE_END
LOWER_RIGHT:
	ADD	R6,RB,R6	; x = center_x + x
	SUB	R7,RC,R7	; y = center_y - y
	TOSUBR	GC_STORE_SUBR

LOWER_LEFT:
	SUB	R6,RB,R6	; x = center_x - x
	SUB	R7,RC,R7	; y = center_y - y
	TOSUBR	GC_STORE_SUBR
GC_STORE_END:

	ADDSI	RD, 1	; x += 1
	CMP	RD,RA
	BGT	GC_QUIT
GC_CHECK:
	; check x^2 + y^2 > rad ^2
	MOVE	R3,RD
	MOVE	R4,RD
	TOSUBR	TIMESU	
	MOVE	R7,R3	;save x^2 in R7

	MOVE	R3,RE
	MOVE	R4,RE
	TOSUBR	TIMESU
	ADD	R7,R7,R3 ; save x^2 + y^2 in R7

	CMP	R7,R8	; if !(x^2 + y^2 > rad ^2){
	BLE	GC_WHILE
	ADDSI	RE,-1	; y -= 1
	BR	GC_CHECK	;}
GC_QUIT:	
	LOAD	R3,R2,OBJ-ARSIZE

	SUB	R4,RF,R3	
	SR	R4,2
	ADDSI	R4,-1	; discount the first field, used for size
	STORES	R4,R3

	R_S

ARSIZE=4
GC_STORE_SUBR:
	C_S
	LIL	R3,#FFFF
	AND	R6,R3	; get the lower 4 digits of R6
	SL	R7,16
	OR	R6,R7
	STORES	R6,RF
	ADDSI	RF,4
	MOVE	R6,RD
	MOVE	R7,RE
	R_S
	
END
	INT	MAIN
	S	GC_QUIT
MAIN:
	LIS	R3, 5
	LIS	R4,1
	LIS	R5,2
	TOSUBR	GENERATE_CIRCLE

	
